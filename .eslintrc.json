{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "next"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"]
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.{test,spec}.{js,jsx,ts,tsx}",
        "**/__tests__/**/*.{js,jsx,ts,tsx}"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
